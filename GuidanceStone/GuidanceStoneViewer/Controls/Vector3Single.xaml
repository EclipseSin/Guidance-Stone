<UserControl x:Class="GuidanceStoneViewer.Controls.Vector3Single"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GuidanceStoneViewer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Text="X:" Margin="5,0,3,0"/>
        <TextBox Grid.Column="1" Text="{Binding Path=X}"/>
        <TextBlock Grid.Column="2" Text="Y:" Margin="5,0,3,0"/>
        <TextBox Grid.Column="3" Text="{Binding Path=Y}"/>
        <TextBlock Grid.Column="4" Text="Z:" Margin="5,0,3,0"/>
        <TextBox Grid.Column="5" Text="{Binding Path=Z}"/>
    </Grid>
</UserControl>
